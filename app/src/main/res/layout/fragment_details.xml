<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_page_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is Details Fragment"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_label_received_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="받은 데이터: "
        app:layout_constraintEnd_toStartOf="@id/tv_received_data"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/tv_page_desc"
        app:layout_constraintTop_toBottomOf="@id/tv_page_desc" />

    <TextView
        android:id="@+id/tv_received_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/tv_page_desc"
        app:layout_constraintStart_toEndOf="@id/tv_label_received_data"
        app:layout_constraintTop_toTopOf="@id/tv_label_received_data"
        tools:text="Hello!!"/>


</androidx.constraintlayout.widget.ConstraintLayout>